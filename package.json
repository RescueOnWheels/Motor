{
  "name": "motor",
  "version": "1.0.0",
  "description": "Motor control system of the Rover Rescue System.",
  "main": "index.js",
  "dependencies": {
    "debug": "3.1.0",
    "if-env": "1.0.4"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "eslint": "5.6.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "mocha": "5.2.0",
    "nyc": "13.0.1"
  },
  "optionalDependencies": {
    "i2c": "0.2.3"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "if-env NODE_ENV=CI && npm run lint:ci || npm run lint:fix",
    "lint:ci": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "if-env NODE_ENV=CI && npm run test:ci || npm run test:debug",
    "test:ci": "nyc mocha",
    "test:debug": "cross-env DEBUG=RRS:* npm run test:ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RescueOnWheels/Motor.git"
  },
  "author": "RescueOnWheels",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/RescueOnWheels/Motor/issues"
  },
  "homepage": "https://github.com/RescueOnWheels/Motor#readme",
  "directories": {
    "example": "example",
    "lib": "lib",
    "test": "test"
  }
}
